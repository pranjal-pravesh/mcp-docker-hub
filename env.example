# MCP Hub Server Environment Variables
# Copy this file to .env and update with your actual values

# Slack Configuration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_TEAM_ID=your_slack_team_id_here
SLACK_CHANNEL_IDS=channel1,channel2

# Brave Search Configuration
BRAVE_API_KEY=your_brave_api_key_here

# Wolfram Alpha Configuration
WOLFRAM_API_KEY=your_wolfram_app_id_here

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here

# Database Configuration
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/dbname
REDIS_URL=redis://localhost:6379

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here

# News API Configuration
NEWS_API_KEY=your_news_api_key_here

# Google Calendar Configuration
GOOGLE_CALENDAR_CREDENTIALS=path_to_your_google_credentials.json

# Server Configuration
HOST=0.0.0.0
PORT=8000 